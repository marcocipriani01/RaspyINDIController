#!/bin/bash
interface="$(awk '{print $2}' /etc/telescope-pi)"
sudo ifconfig "$interface" up
sudo service bluetooth start
sudo rfkill unblock bluetooth
sudo sdptool add SP
echo "Bluetooth MAC address = $(hciconfig | grep Address | awk '{print $3}')"
sudo python /usr/share/Telescope-Pi/telescope-pi.py "$(awk '{print $1}' /etc/telescope-pi)" "$interface" "$(awk '{print $3}' /etc/telescope-pi)" "$(awk '{print $4}' /etc/telescope-pi)"
